<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
    
    <application>
    	<!-- Se define un message bundle para sobreescribir los mensajes de JSF -->
    	<message-bundle>uy.com.bse.soluciones.i18n.MyMessages</message-bundle>
    	
		<!-- Se crea un resource bundle para mensajes localizados -->
		<resource-bundle>
			<base-name>uy.com.bse.soluciones.i18n.AppMessages</base-name>
			<var>labels</var>
		</resource-bundle>
		
		<locale-config>
			<default-locale>es</default-locale>
		</locale-config>
		<action-listener>
	        org.primefaces.application.DialogActionListener
	    </action-listener>
	    <navigation-handler>
	        org.primefaces.application.DialogNavigationHandler
	    </navigation-handler>
	    <view-handler>
	        org.primefaces.application.DialogViewHandler
	    </view-handler>		
	</application>	    
</faces-config>
